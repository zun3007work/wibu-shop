<%- include ('../includes/head.ejs') %>

<body>
  <%- include ('../includes/nav.ejs') %>

  <main>
    <div class="container p-5 mt-5 shadow-lg rounded-5">
      <% if(products.length > 0) { %>

      <h1 class="text-center">My Product</h1>
      <!-- List of Product -->
      <div class="row mt-5">
        <% products.forEach( (product) => { %>
        <div class="col-md-6 col-lg-4 mb-3 product-element">
          <div class="card rounded-5">
            <img src="/<%= product.imgUrl %>" alt="hutao image" class="card-img-top" />
            <div class="card-body">
              <h4 class="card-title mb-3 text-center"><%= product.title %></h4>
              <p class="card-text text-center mb-3">
                <%= product.description %>
              </p>
              <div class="row g-1">
                <div class="col-6">
                  <form action="/admin/edit-product/<%= product._id %>">
                    <button type="submit" class="btn btn-dark rounded-3 w-100">
                      Edit
                    </button>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  </form>
                </div>
                <div class="col-6">
                  <button type="button" class="btn btn-dark rounded-3 w-100" onclick="deleteProduct(this)">
                    Delete
                  </button>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden" name="id" value="<%= product._id %>">
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <h1 class="text-center">You Don't Have Any Product Yet</h1>
      <% } %>
    </div>
  </main>
  <%- include ('../includes/end.ejs') %>
  <script src="/js/admin.js"></script>