<%- include ('../includes/head.ejs') %>
<main>
  <div class="container shadow-lg mt-5 p-5 rounded-5" style="max-width: 600px;">
    <h1 class="text-center">New Password</h1>
    <form action="/new-password" method="post">
      <div class="form-floating mt-5 mb-3">
        <input type="password" name="password" id="floatingPassword" placeholder="*************" class="form-control">
        <label for="floatingPassword">Password</label>
      </div>
      <div class="text-center">
        <button class="btn btn-dark w-100 py-2 fs-4 mt-3" type="submit">Reset Password</button>
      </div>
      <input type="hidden" name="token" value="<%= token %>">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>
    <div class="text-end mt-3 ">
      <a href="/" class="link-dark">Main Page</a>
    </div>
  </div>
</main>
<%- include ('../includes/end.ejs') %>