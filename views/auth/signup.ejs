<%- include ('../includes/head.ejs') %>
<main>
  <div class="container shadow-lg mt-5 p-5 rounded-5" style="max-width: 600px;">
    <h1 class="text-center">Sign Up</h1>
    <% if(errorMessage) { %>
      <div class="text-center alert alert-danger mt-5" role="alert"><%= errorMessage %></div>
    <% } %>
    <form action="/signup" method="post">
      <div class="form-floating mt-5 mb-3">
        <input type="email" name="email" id="floatingEmail" placeholder="abcxyz@email.acb" class="form-control" value="<%= oldInput.email %>">
        <label for="floatingEmail">Email</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" name="password" id="floatingPassword" placeholder="******************" class="form-control">
        <label for="floatingPassword">Password</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" name="confirmPassword" id="floatingConfirmPassword" placeholder="******************" class="form-control">
        <label for="floatingConfirmPassword">Confirm Password</label>
      </div>
      <div class="text-center">
        <small>If you have an accound, please <a href="/login" class="link-dark">Login</a>.</small>
        <button class="btn btn-dark w-100 py-2 fs-4 mt-3" type="submit">Sign Up</button>
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>
    <div class="text-end mt-3 ">
      <a href="/" class="link-dark">Main Page</a>
    </div>
    
  </div>
</main>
<%- include ('../includes/end.ejs') %>